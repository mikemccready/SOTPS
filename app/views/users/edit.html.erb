<div id="banner">
  <%= image_tag @user.image_url, class:"userShowImg" %>
  <h2 class="userShowName">
    <%= @user.name %>
  </h2>
</div> 

<% if ((@user.id == current_user.id) || (current_user.name == "Michael McCready")) %> 
	<%= form_for(@user) do |f| %>
	  <% if @user.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

	      <ul>
	      <% @user.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>
	  	<div class="row">
			  <div class="field">
			    <%= f.label :organization %><br>
			    <%= f.text_field :organization %>
			  </div>
			  <div class="field">
			    <%= f.label :image_url %><br>
			    <%= f.text_field :image_url %>
			  </div>
			  <div class="actions">
			    <%= f.submit %>
			  </div>
			  <%= link_to "Delete Profile", user_path, method: :delete, data: {   confirm: "Are you sure you want to delete this profile?"} %></br>
		  </div>
	<% end %>
<% end %>

