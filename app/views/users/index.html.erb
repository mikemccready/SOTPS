<h1>Users</h1>


<% @users.each do |user| %>
  <div class="row">
    <div class="small-8 columns"><%= image_tag user.image_url %>
      <%= link_to user.name, user %>
      <%= user.organization %>
    </div>  
    <div class="small-1 columns"><%= link_to 'Edit', edit_user_path(user) %></div>
    <div class="small-1 columns"><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></div>
  </div>
<% end %>


<br>

<%= link_to 'New User', new_user_path %>
