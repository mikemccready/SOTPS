
<div id="banner">
  <%= image_tag @user.image_url, class:"userShowImg" %>
  <h2>
    <%= @user.name %>
  </h2>
</div>  

<p>
  <%= @user.organization %>
</p>


<% @posts.each do |post| %>
  <div class="row" id="post">
    <div class="small-12 columns" id="postImg" style="background-image: url(<%= post.image.url %>)">
      <div id="idTag">
        <%= image_tag post.user.image_url, class:"small-2 columns", id:"userThumb" %>
        <div id="posterName">
          <%= post.user.name %>
        </div>
      </div>
      <div class="small-12 columns" id="postTag">
        <strong><%= link_to post.title, post, style:"color: white" %></strong><br>
        <%= post.description[0,70]%>..
      </div>
    </div>

    <div class="small-10 columns">
      <!-- votes control -->
      <div class="vote upVote">
        <%#= post.up_votes %>
        <%= link_to vote_post_path(post, vote: true), method: 'post' do %>
          <h2>+</h2>
        <% end %> 
      </div>  
      <div class="vote downVote">
        <%= link_to vote_post_path(post, vote: false), method: 'post' do %>
          <h2>-</h2>
        <% end %> 
      </div> 

        <%#= post.down_votes %>
      <%= post.total_votes %> votes
    </div>  
      <strong class="small-2 columns"><%= link_to "More", post %></strong>

  </div>  
<% end %>


<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
